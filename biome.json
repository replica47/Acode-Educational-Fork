{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "error",
				"noUselessSwitchCase": "error",
				"useFlatMap": "error"
			},
			"style": {
				"noNegationElse": "off",
				"useForOf": "error",
				"useNodejsImportProtocol": "error",
				"useNumberNamespace": "error"
			},
			"suspicious": {
				"noDoubleEquals": "error",
				"noThenProperty": "error",
				"useIsArray": "error"
			}
		}
	},
	"javascript": {
		"globals": ["Global1"]
	},
	"files": {
		"include": ["src/**/*", "utils/**/*.js", "www/**/*.js", "www/res/**/*.css"],
		"ignore": [
			"ace-builds",
			"www/js/**/*.js",
			"www/css/**/*.css",
			"src/plugins/**/*",
			"plugins/**/*",
			"hooks/**/*",
			"fastlane/**/*",
			"res/**/*",
			"platforms/**/*"
		]
	}
}
